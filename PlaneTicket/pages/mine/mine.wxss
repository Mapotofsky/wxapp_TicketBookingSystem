/* pages/mine/mine.wxss */
page{height: 100%}
.container1 {  
  height: 100%;  
  display: flex;  
  flex-direction: column;  
  padding: 0;  
  box-sizing: border-box;  
  background-color: #f2f2f2  
}   
.login-from-title{
  font-size: 16px;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color:white;
  border: 1rpx solid skyblue;
  padding: 15rpx;
}
/*登录图片*/  
.login-icon{  
  flex: none;  
}  
.login-img{  
  width: 750rpx;  
}  
  
/*表单内容*/  
.login-from {  
  margin-top: 20px;  
  flex: auto;  
  height:100%;  
}  
  
.inputView {  
  background-color: #fff;  
  line-height: 44px;
  display: flex;
  flex-direction: row;
  /* border-bottom:1rpx solid #c3c3c3; */
}  
/*输入框*/  
.loginLab {  
  flex: 1; 
  color: #545454;  
  font-size: 14px;
  margin-left: 20rpx;  
}  
.inputText {  
  flex: 3;
  text-align: left;  
  margin-top: 11px;  
  color: #111;  
  font-size: 14px  
}  
.picker text{
  color: #111;  
  font-size: 14px 
}
.line {  
  width: 100%;  
  height: 1px;  
  background-color: #cccccc;  
  margin-top: 1px;  
}  
/*按钮*/  
.loginBtnView {  
  width: 100%;  
  height: auto;  
  background-color: #f2f2f2;  
  margin-top: 0px;  
  margin-bottom: 0px;  
  padding-bottom: 0px;  
}  
  
.loginBtn {  
  width: 100%;  
  margin-top: 35px;
  font-size: 13px;   
} 
/* 登录之后的页面  */
.container2{
  margin: 0 auto;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.head{
  flex: 1;
  width: 100%;
  background: #99CCFF;
  /* margin-bottom: 10rpx; */
}
.userimg{
  text-align: center;
  vertical-align: middle;
  margin-top: 10%;
}
.userimg2{
  text-align: center;
  vertical-align: middle;
  margin-top: 10%;
}
.userimg2 image{
  height: 300rpx; 
  width: 300rpx;
  border-radius:50%;
   
}
.userimg image{
  height: 400rpx; 
  width: 350rpx;
  /* border-radius:50%; */
   
}
.userIntro{
  display: flex;
  flex-direction: column; 
  text-align: center;
}
.userIntro text{
  color: #fff;
  font-size: 25px;
}
.content{
  flex-direction: column;
  flex: 2; 
}
.content-item{
  height: 40px;
  background: #fff;
  border-bottom:1rpx solid #c3c3c3;
}
.tab{
  margin-top: 16rpx;
   /* margin-bottom: 9rpx;  */
}
.tabicon{
  margin-left: 15rpx;
  margin-right: 10rpx;
  float: left;
}
.tabicon image{
  vertical-align: middle;
  text-align: center;
  height: 25px;
  width: 25px;
}
.content-item text{
  text-align: center;
  vertical-align: middle;
  color: #666;
  font-size: 14px;
}
.tabimg{
  position: relative;
  float: right;
  margin-right: 15rpx;
}
.tabimg image{
  vertical-align: middle;
  text-align: center;
  height: 25px;
  width: 25px;
}