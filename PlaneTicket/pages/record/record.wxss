/* pages/record/record.wxss */
page{height: 100%}
/* 登录之后的页面  */
.container{
  margin: 0 auto;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.head{
  flex: 1;
  width: 100%;
  background: #99CCFF;
  /* margin-bottom: 20rpx;  */
}
.userimg{
  text-align: center;
  vertical-align: middle;
  margin-top: 10%;
}
.userimg image{
  height: 80px; 
  width: 80px;
  border-radius:50%;
   
}
.userIntro{
  display: flex;
  flex-direction: column; 
  text-align: center;
}
.userIntro text{
  color: #fff;
  font-size: 13px;
}
.content{
  flex-direction: column;
  flex: 2; 
}
.book{
  /* margin-top: 12rpx; */
  display: flex;
  height: 200rpx;
  border-bottom:1rpx solid #c3c3c3;
  margin-bottom: 10rpx;
}
.bookimage{
  flex: 2;
  height: 100%;
}
.bookimage image{
  height: 100%;
  width: 100%;
}
.content1{
  margin-top: 50rpx;
  margin-left: 15rpx;
  flex: 6;
  display: flex;
  flex-direction: row;
  font-size: 14px;
  color: #666;
}
.bookbanner{
  display: flex;
  flex: 1;
  flex-direction: column;
}
.bookcontent{
  display: flex;
  flex:4;
  flex-direction: column;
}

