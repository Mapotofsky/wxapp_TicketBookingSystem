page{width: 100%;margin: 0 auto;}
image{width: 100%;}
.newbooks{
  width: 720rpx;
  margin: 0 auto;
}
.table{
  border-left: 1rpx solid #333;
  border-top: 1rpx solid #333;
}
.tr{
  display: flex;
}
.td{
  border-right:1rpx solid #333;
  border-bottom: 1rpx solid #333;
}
.tr .td:first-child{
  flex: 2;
}
.tr td:nth-child(2){
  flex: 5;
}
.tr .td:nth-child(3){
  flex: 4;
}
.search {
  /* margin-top: 70rpx; */
  background: #e5e5e5;   
  height: 140rpx;
  
}
.search input{
  background: #fff;
  position: relative;
  top: 40rpx;
  font-size: 25rpx;
  text-align: center;
  border:solid 1rpx #fff; 
  border-radius:30rpx; 
  height: 50%;
}
.sugges{
    margin-top: 20rpx;
    font-size: 16px;
    /* border-bottom:1rpx  #000; */
    border-bottom:1rpx solid #c3c3c3;
    margin-bottom: 10rpx;
}
.sugges text{
  color: #6699CC;
  position: relative;
  bottom: 10rpx;
}
.book{
  margin-top: 12rpx;
  display: flex;
  height: 200rpx;
  border-bottom:1rpx solid #c3c3c3;
  margin-bottom: 10rpx;
}
.bookimage{
  flex: 2;
  /* background: #c3c3c3; */
  height: 100%;
}
.bookimage image{
  height: 100%;
}
.content{
  flex: 4;
  margin-top: 50rpx;
  font-size: 14px;
  color: #666;
  /* background: #000; */
  margin-left: 10rpx;
}
