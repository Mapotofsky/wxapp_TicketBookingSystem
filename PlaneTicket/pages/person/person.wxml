       <view class='userIntro'>
        <text>管理员</text>
       </view>
   </view>
  
   <view class='content'>
   <form bindsubmit='altrReader'>
      <view class='content-item'>
        <view class='tab'>
          <view class='tabicon'>
          <image src='http://m.qpic.cn/psc?/V53hu6fq2h5K1y3Lmdmv0m0XR93szpDC/45NBuzDIW489QBoVep5mcTPlE55dJd8y1xNfxEakIOoVuOuFbi0CxyrR4T6Ufl1Oh7*oEtyGOtrEjfzO4g9TVZIKIgGzNAez1igFKKzbXrQ!/b&bo=IAAgAAAAAAADFzI!&rf=viewer_4'></image>
          </view>
          <text>电话:</text>
