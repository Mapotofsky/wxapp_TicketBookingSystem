            <input name='phone' value='{{userInfo.tel}}'></input>
          </view>
        </view>
      </view>

      <view class='content-item'>
        <view class='tab'>
          <view class='tabicon'>
          <image src='http://m.qpic.cn/psc?/V53hu6fq2h5K1y3Lmdmv0m0XR93szpDC/45NBuzDIW489QBoVep5mcbGXBSW3qarSYQsPq6Z1yXGrOFjFP1Tltw3GSz40N41R1uDgHGuXJtKT6A.scHbmNMxje7frSC5lARwOSlnIBXc!/b&bo=IAAgAAAAAAADFzI!&rf=viewer_4'></image>
          </view>
          <text>邮箱:</text>
        <view class='tabimg'>
            <input name='email' value='{{userInfo.email}}'></input>
          </view>
        </view>
      </view>
      <view class="BtnView">  
          <button class="loginBtn" type='primary' form-type="submit">提交</button>  
      </view>
  </form>
  </view>
 </view>