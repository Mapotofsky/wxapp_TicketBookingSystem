/* pages/result/result.wxss */
.depAndarr {
  position: relative;
  background-color: white;
  height: 25px;
  color: #666;
  font-size: 14px;
  text-align: center;
  border: 3px solid skyblue;
}
.content{
  background-color: white;
  display: flex;
  flex-direction: column;
}
.flight{
  margin-top: 20px;
  widows: 100%;
  background-color: white;
  min-width: 100%;
  border-bottom: 3px solid skyblue;
  display: flex;
  flex-direction: row;
}
.flightpart1{
  width: 60%;
  /* margin-top: 20px; */
}
.flightpart2{
  margin-top: 10rpx;
  width: 40%;
  /* margin-top: 20px; */
}
.flightinfo{
  display: flex;
  flex-direction: row;
}
.info{
  flex: 4;
  line-height: 15px;
  color: #000;
  font-size: 18px;
  margin-left: 3%;
}
.info text{
  margin-left: 1%;
}
.price{
   flex:1;
   line-height: 13px;
   color: orange;
   font-size: 13px;
}
.flightname{
  margin-left: 25%;
  line-height: 15px;
   color: #f50909;
   font-size: 12px;
   margin-bottom: 15px;
}
.ticket{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 2%;
  justify-content: space-evenly;
}
.ticket1{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.ticket1 text{
  font-size: 15px;
}
.ticket2{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.ticket2 text{
  font-size: 15px;
}
