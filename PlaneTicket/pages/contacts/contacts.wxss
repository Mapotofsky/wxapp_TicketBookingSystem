/* pages/contacts/contacts.wxss */
.contactTitle {
    position: relative;
    top: 10px;
    height: 25px;
    color: #666;
    font-size: 14px;
    text-align: center;
    border-bottom: 1px solid #c3c3c3;
    margin-bottom: 20px;
}

.mycontact {
    margin: 8px 5px;
    padding: 5px;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    border: 1px solid #666;
    border-radius: 15px;
    background-color: white;
}

.contactname {
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    align-items: flex-start;
    margin: auto auto auto 20px;
}

#rela {
    font-size: small;
    color: #666;
    margin: 3px;
}

#name {
    font-size: x-large;
    font-weight: bold;
}

.contactinfo {
    margin: auto 20px auto auto;
}

.addcontact {
    margin: 9px 5px;
    padding: 5px;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
    border: 1px dashed #666;
    border-radius: 15px;
}

.icon {
    height: 40px;
    width: 40px;
}

.demo-swipe-cell {
    user-select: none;
}

.van-swipe-cell__right {
    display: inline-block;
    width: 65px;
    height: 44px;
    font-size: 15px;
    line-height: 44px;
    color: #fff;
    text-align: center;
    background-color: #ee0a24;
}